{% extends "simple-page.njk" %}
{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="/css/posts-list.css">
{% endblock %}
{% block pageContent %}
  <div class="posts-container">
    {% for post in collections.posts %}
      <a href="{{ post.url }}">
        <div class="post-item">
          <div class="post-item-title">
            {{ post.data.title }}
          </div>
          <div class="post-item-description">
            {{ post.data.description }}
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
{% endblock %}